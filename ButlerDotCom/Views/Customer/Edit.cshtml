
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Sub-DashLayout.cshtml";
}

<div ng-controller="CustomerCtrl" ng-init="EditInit()" class="container-fluid body-content">
    <div class="row crds ml-1 p-3 br5">
        <div class="col-12 d-flex align-items-center justify-content-between">
            <h4>Edit Customer</h4>
        </div>
    </div>

    <div class="AddUserForm bg-white mt-2">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <lable>Full Name</lable>
                            <input class="form-control" type="text" ng-model="Customer.FullName" placeholder="Enter Full Name">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <lable>Contact</lable>
                            <input class="form-control" type="text" ng-model="Customer.Contact" placeholder="Enter Contact">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <lable>CNIC</lable>
                            <input class="form-control" type="text" ng-model="Customer.CNIC" placeholder="Enter CNIC">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <lable>Email</lable>
                            <input class="form-control" type="email" ng-model="Customer.Email" placeholder="Enter Email">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <lable>Address</lable>
                            <input class="form-control" type="text" ng-model="Customer.Address" placeholder="Enter Address">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <lable>Verfication Status</lable>
                            <div class="row">
                                <div class="ml-3 col-md-2">
                                    <input class="form-check-input" ng-model="Customer.VerificationStatus" ng-checked="Customer.VerificationStatus == true" type="radio" name="exampleRadios" id="exampleRadios1" value="true">
                                    <label class="form-check-label" for="exampleRadios1">
                                        Yes
                                    </label>
                                </div>
                                <div class="col-md-3">
                                    <input class="form-check-input" ng-model="Customer.VerificationStatus" ng-checked="Customer.VerificationStatus == false" type="radio" name="exampleRadios" id="exampleRadios2" value="false">
                                    <label class="form-check-label" for="exampleRadios1">
                                        No
                                    </label>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label>Profile Image</label>
                <input type="file" accept="image/*" ngf-select="UploadCustomerImage($files,'ProfileImageUrl')" class="form-control-file" />
            </div>
            <div class="form-group col-md-6">
                <img style="max-height: 413px;max-width:200px" src="{{Customer.ProfileImageUrl}}" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label>CNIC Front Image</label>
                <input type="file" accept="image/*" ngf-select="UploadCustomerImage($files,'CNICFrontImageUrl')" class="form-control-file" />
            </div>
            <div class="form-group col-md-6">

                <img style="max-height: 413px;max-width:200px" src="{{Customer.CNICFrontImageUrl}}" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label>CNIC Back Image</label>
                <input type="file" accept="image/*" ngf-select="UploadCustomerImage($files,'CNICBackImageUrl')" class="form-control-file" />
            </div>
            <div class="form-group col-md-6">
                <img style="max-height: 413px;max-width:200px" src="{{Customer.CNICBackImageUrl}}" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label>Verfication Image</label>
                <input type="file" accept="image/*" ngf-select="UploadCustomerImage($files,'VerificationImageUrl')" class="form-control-file" />
            </div>
            <div class="form-group col-md-6">
                <img style="max-height: 413px;max-width:200px" src="{{Customer.VerificationImageUrl}}" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 ">
                <a ng-click="EditCustomer(Customer)" class="btn btn-primary float-right">
                    Submit
                </a>
            </div>
        </div>
    </div>
</div>

