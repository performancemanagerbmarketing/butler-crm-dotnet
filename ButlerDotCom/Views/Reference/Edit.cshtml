
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Sub-DashLayout.cshtml";
}

<div ng-controller="ReferenceCtrl" ng-init="EditInit()" class="container-fluid body-content">
    <div class="row">
        <div class="col-12 d-flex align-items-center justify-content-between">
            <h4>Edit Reference</h4>
        </div>
    </div>

    <div class="AddUserForm bg-white">
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <lable>Full Name</lable>
                            <input ng-if="IsEditAllowed" class="form-control" type="text" ng-model="Reference.FullName" placeholder="Enter Name">
                            <input ng-if="!IsEditAllowed" readonly class="form-control" type="text" ng-model="Reference.FullName" placeholder="Enter Name">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <lable>Notes</lable>
                            <input  ng-if="IsEditAllowed"  class="form-control" type="text" ng-model="Reference.Notes" placeholder="Enter Name">
                            <input  ng-if="!IsEditAllowed" readonly class="form-control" type="text" ng-model="Reference.Notes" placeholder="Enter Name">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <lable>Address</lable>
                            <input  ng-if="IsEditAllowed"  class="form-control" type="text" ng-model="Reference.Address" placeholder="Enter Name">
                            <input  ng-if="!IsEditAllowed" readonly class="form-control" type="text" ng-model="Reference.Address" placeholder="Enter Name">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <lable>Is A Member</lable>
                            <div class="row">
                                <div class="ml-3 col-md-2">
                                    <input  ng-if="IsEditAllowed"  class="form-check-input" ng-model="Reference.IsAMember" ng-checked="Reference.IsAMember == true" type="radio" name="exampleRadios" id="exampleRadios1" value="true">
                                    <input  ng-if="!IsEditAllowed" readonly class="form-check-input" ng-model="Reference.IsAMember" ng-checked="Reference.IsAMember == true" type="radio" name="exampleRadios" id="exampleRadios1" value="true">
                                    <label class="form-check-label" for="exampleRadios1">
                                        Yes
                                    </label>
                                </div>
                                <div class="col-md-3">
                                    <input  ng-if="IsEditAllowed"  class="form-check-input" ng-model="Reference.IsAMember" ng-checked="Reference.IsAMember == false" type="radio" name="exampleRadios" id="exampleRadios2" value="false">
                                    <input  ng-if="!IsEditAllowed" readonly class="form-check-input" ng-model="Reference.IsAMember" ng-checked="Reference.IsAMember == false" type="radio" name="exampleRadios" id="exampleRadios2" value="false">
                                    <label class="form-check-label" for="exampleRadios1">
                                        No
                                    </label>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label>Profile Image</label>
                <input  ng-if="IsEditAllowed"  type="file" accept="image/*" ngf-select="UploadReferenceImage($files,'ProfileImageUrl')" class="form-control-file" />
                <input  ng-if="!IsEditAllowed" readonly type="file" accept="image/*" ngf-select="UploadReferenceImage($files,'ProfileImageUrl')" class="form-control-file" />
            </div>
            <div class="form-group col-md-6">
                <img style="max-height: 413px;max-width:200px" src="{{Reference.ProfileImageUrl}}" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label>CNIC Front Image</label>
                <input  ng-if="IsEditAllowed"  type="file" accept="image/*" ngf-select="UploadReferenceImage($files,'CNICFrontImageUrl')" class="form-control-file" />
                <input  ng-if="!IsEditAllowed" readonly type="file" accept="image/*" ngf-select="UploadReferenceImage($files,'CNICFrontImageUrl')" class="form-control-file" />
            </div>
            <div class="form-group col-md-6">

                <img style="max-height: 413px;max-width:200px" src="{{Reference.CNICFrontImageUrl}}" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label>CNIC Back Image</label>
                <input  ng-if="!IsEditAllowed" readonly type="file" accept="image/*" ngf-select="UploadReferenceImage($files,'CNICBackImageUrl')" class="form-control-file" />
            </div>
            <div class="form-group col-md-6">
                <img style="max-height: 413px;max-width:200px" src="{{Reference.CNICBackImageUrl}}" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 ">
                <a ng-if="IsEditAllowed" ng-click="EditReference(Reference)" class="btn btn-primary float-right">
                    Submit
                </a>
            </div>
        </div>
    </div>
</div>


