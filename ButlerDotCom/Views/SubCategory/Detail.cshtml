
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Sub-DashLayout.cshtml";
}

<div ng-controller="SubCategoryCtrl" ng-init="EditInit()" class="container-fluid body-content">
    <div class="row crds ml-1 p-3 br5">
        <div class="col-12 d-flex align-items-center justify-content-between">
            <h4>Detail SubCategory</h4>
        </div>
    </div>

    <div class="crds ml-1 p-3 br5 mt-2">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <lable>Name</lable>
                    <input class="form-control" type="text" readonly ng-model="SubCategory.Name" placeholder="Enter Name">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <lable>Category</lable>
                    <ui-select ng-model="SubCategory.Category"  theme="select2" class="form-control select-dropdown">
                        <ui-select-match  placeholder="Select a Category in the list...">{{$select.selected.Name}}</ui-select-match>
                        <ui-select-choices repeat="item in CategoryDropdownList | filter: $select.search">
                            <div ng-bind-html="item.Name | highlight: $select.search"></div>
                        </ui-select-choices>
                    </ui-select>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <lable>Cost</lable>
                    <input class="form-control" type="number" readonly ng-model="SubCategory.Cost" placeholder="Enter Cost">
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 ">
                <a ng-click="DeleteSubCategory()" class="btn btn-primary float-right">
                    Delete
                </a>
            </div>
        </div>
    </div>
</div>

