
@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Sub-DashLayout.cshtml";
}

<div ng-controller="SubCategoryCtrl" ng-init="AddInit()" class="container-fluid body-content">
    <div class="row crds ml-1 p-3 br5">
        <div class="col-12 d-flex align-items-center justify-content-between">
            <h4>Add SubCategory</h4>
        </div>
    </div>

    <div class="crds ml-1 p-3 br5 mt-2">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <lable>Name</lable>
                    <input class="form-control" type="text" ng-model="SubCategory.Name" placeholder="Enter Name">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <lable>Category</lable>
                    <ui-select ng-model="SubCategory.Category" theme="select2" class="form-control select-dropdown">
                        <ui-select-match placeholder="Select a Category in the list...">{{$select.selected.Name}}</ui-select-match>
                        <ui-select-choices repeat="item in CategoryDropdownList | filter: $select.search">
                            <div ng-bind-html="item.Name | highlight: $select.search"></div>
                        </ui-select-choices>
                    </ui-select>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <lable>Cost</lable>
                    <input class="form-control" type="number" ng-model="SubCategory.Cost" placeholder="Enter Cost">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <lable>Conditional Key</lable>
                    <input class="form-control" type="text" ng-model="SubCategory.ConditionalKey" placeholder="Enter Conditional Key">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <lable>Additional Info Heading</lable>
                    <input class="form-control" type="text" ng-model="SubCategory.AdditionalInfoHeading" placeholder="Enter Additional Info Heading">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <lable>Additional Info Key</lable>
                    <input class="form-control" type="text" ng-model="SubCategory.AdditionalInfoKey" placeholder="Enter Additional Info Key">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <lable>Is Active Status</lable>
                    <div class="row">
                        <div class="ml-3 col-md-2">
                            <input class="form-check-input" ng-model="SubCategory.IsActive" ng-checked="SubCategory.IsActive == true" type="radio" name="exampleRadios" id="exampleRadios1" value="true">
                            <label class="form-check-label" for="exampleRadios1">
                                Yes
                            </label>
                        </div>
                        <div class="col-md-3">
                            <input class="form-check-input" ng-model="SubCategory.IsActive" ng-checked="SubCategory.IsActive == false" type="radio" name="exampleRadios" id="exampleRadios2" value="false">
                            <label class="form-check-label" for="exampleRadios1">
                                No
                            </label>
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-md-6">
                <label>Upload Image</label>
                <input type="file" accept="image/*" ngf-select="UploadSubCategoryImage($files,'ProfileUrl')" class="form-control-file" />
            </div>
            <div class="form-group col-md-6">
                <img style="max-height: 413px;max-width:200px" src="{{SubCategory.ImageUrl}}" />
            </div>
        </div>
        <div class="row">
            <div class="col-12 ">
                <a ng-click="AddSubCategory(SubCategory)" class="btn btn-primary float-right">
                    Submit
                </a>
            </div>
        </div>
    </div>
</div>

